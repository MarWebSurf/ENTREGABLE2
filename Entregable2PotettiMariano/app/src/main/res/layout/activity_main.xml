<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/container_fragment_main_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imagen_main_Activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/undersea3_2">
        </ImageView>





            <TextView
                android:id="@+id/textView_MainActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECETAS\nDEL\nMAR "
                android:fontFamily="cursive"
                android:textAlignment="center"
                android:textColor="@color/colorcard"
                android:textSize="28sp"
                android:textStyle="bold|italic"
                android:layout_gravity="center"/>







    </FrameLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_view_header_layout"
        app:menu="@menu/menu_navigation_view"
        android:background="@color/colorNavigation"
        app:itemTextColor="@color/colorcard"
        app:itemIconTint="@color/colorcard" >

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>