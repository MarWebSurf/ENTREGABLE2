<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FragmentDetalleReceta"
    android:orientation="vertical"
    android:id="@+id/fragmentDetalleReceta"
    android:background="@drawable/undersea_3_2_transparente"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/imagen_Detalle_Receta"
        android:scaleType="centerCrop"

        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredientes"
            android:alpha="0.7"
            android:textStyle="bold|italic"
            android:fontFamily="cursive"
            android:layout_marginStart="15dp"
            android:background="@color/colorIngredientes2"
            android:layout_marginTop="8dp"
            android:textSize="22sp"
            android:textColor="@color/colorIngredientes"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:id="@+id/texto_Ingredientes_Receta"
        android:fontFamily="casual"
        android:textStyle="bold|italic"
        android:textColor="@color/colortexto"
        android:layout_margin="15dp"
        android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preparacion"
            android:fontFamily="cursive"
            android:alpha="0.7"
            android:textStyle="bold|italic"
            android:layout_marginStart="15dp"
            android:background="@color/colorIngredientes2"
            android:layout_marginTop="8dp"
            android:textSize="22sp"
            android:textColor="@color/colorIngredientes"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:id="@+id/texto_Preparacion_Receta"
        android:fontFamily="casual"
        android:textStyle="italic|bold"
        android:layout_margin="15dp"
        android:gravity="center"
        android:textColor="@color/colortexto"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Disfrútalo!"
            android:fontFamily="cursive"
            android:gravity="center"
            android:textSize="28dp"
            android:layout_marginBottom="15dp"
            android:textStyle="bold|italic"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

</ScrollView>